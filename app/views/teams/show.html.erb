    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h2 class="mt-5"><%= @teams.name%></h2>
          <br>
           <ul class="list-group">
            <% @teams.players.order(:full_name).each do |player| %>
              <li class="list-group-item">
                <%= link_to player.full_name, player %>
              </li>
              <% end%>
            </ul>
        </div>
      </div>
     </div>