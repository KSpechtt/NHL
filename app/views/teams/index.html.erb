 <!-- Page Content -->
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h1 class="mt-5">Current NHL Teams!</h1>
          <br>
          <% if @teams.empty? %>
          <p>There are no appointments.</p>
            <% else %>
              <ul class="list-group">
                <% @teams.order(name: :asc).each do |teams| %>
                  <li class="list-group-item">
                    <%= teams.name %>
                  </li>
            <% end %>
            </ul>
          <% end %>
        </div>
        </div>
      </div>