 <!-- Page Content -->
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h1 class="mt-5">Current NHL Players!</h1>
          <br>
          <%=paginate @players %>
          <% if @players.empty? %>
          <p>There are no players.</p>
            <% else %>
              <ul class="list-group">
                <%  @players.each do |players| %>
                  <li class="list-group-item">
                    <%= players.full_name %>
                  </li>
            <% end %>
            </ul>
          <% end %>
        </div>
        </div>
      </div>