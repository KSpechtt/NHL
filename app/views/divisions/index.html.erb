 <!-- Page Content -->
    <div class="container">
      <div class="row">
        <div class="col-lg-12 text-center">
          <h1 class="mt-5">Current NHL Divisions!</h1>
          <br>
          <% if @divisions.empty? %>
          <p>There are no divisions.</p>
            <% else %>
              <ul class="list-group">
                <%  @divisions.each do |d| %>
                  <li class="list-group-item">
                    <%= d.division_name %>
                  </li>
            <% end %>
            </ul>
          <% end %>
        </div>
        </div>
      </div>